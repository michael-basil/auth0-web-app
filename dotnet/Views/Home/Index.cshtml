@{
    Layout = null;
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Auth0 Minimal – Home</title>
</head>
<body>
    <h1>Auth0 ASP.NET Core MVC – Minimal</h1>

    @if (isAuthenticated)
    {
        <p>You are logged in as <strong>@User.Identity!.Name</strong>.</p>
        <p>
            <a href="/Home/Portal">Go to Portal (protected)</a>
        </p>
        <p>
            <a href="/Account/Profile">View Profile (claims)</a>
        </p>
        <p>
            <a href="/Account/Logout">Logout</a>
        </p>
    }
    else
    {
        <p>You are not logged in.</p>
        <p>
            <a href="/Account/Login">Login with Auth0</a>
        </p>
    }
</body>
</html>
